extends layout

block content
  .errors
  form(action='api/post', method="post" name="postForm")
    label(for="nombre") Nombre
    input#nombre(type="text" name="nombre") 
    label(for="autor") Autor
    input#autor(type="text" name="autor") 
    input(type="submit", value="Enviar")
  table 
    thead
      th id
      th Nombre
      th Autor
      th Opciones 
    tbody.posts 
  script(src="/javascripts/main.js")
